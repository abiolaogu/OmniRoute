# OmniRoute Secrets Template
# Copy to secrets.yaml and fill in values before applying
# NEVER commit secrets.yaml to version control

apiVersion: v1
kind: Secret
metadata:
  name: omniroute-db-secrets
  namespace: omniroute
type: Opaque
stringData:
  # YugabyteDB
  YUGABYTE_USER: "omniroute"
  YUGABYTE_PASSWORD: "<REPLACE_WITH_STRONG_PASSWORD>"
  YUGABYTE_DATABASE: "omniroute"
  DATABASE_URL: "postgresql://omniroute:<PASSWORD>@yugabytedb:5433/omniroute"
  
  # DragonflyDB
  DRAGONFLY_PASSWORD: "<REPLACE_WITH_STRONG_PASSWORD>"
  REDIS_URL: "redis://:<PASSWORD>@dragonflydb:6379"

---
apiVersion: v1
kind: Secret
metadata:
  name: omniroute-api-secrets
  namespace: omniroute
type: Opaque
stringData:
  # Hasura
  HASURA_GRAPHQL_ADMIN_SECRET: "<REPLACE_WITH_STRONG_SECRET>"
  HASURA_GRAPHQL_JWT_SECRET: '{"type":"HS256","key":"<REPLACE_WITH_32_CHAR_KEY>"}'
  
  # JWT
  JWT_SECRET: "<REPLACE_WITH_STRONG_SECRET>"
  
  # API Keys
  INTERNAL_API_KEY: "<REPLACE_WITH_STRONG_KEY>"

---
apiVersion: v1
kind: Secret
metadata:
  name: omniroute-external-secrets
  namespace: omniroute
type: Opaque
stringData:
  # AI Services
  OPENAI_API_KEY: "<REPLACE_WITH_KEY>"
  ANTHROPIC_API_KEY: "<REPLACE_WITH_KEY>"
  
  # Payment Providers
  PAYSTACK_SECRET_KEY: "<REPLACE_WITH_KEY>"
  FLUTTERWAVE_SECRET_KEY: "<REPLACE_WITH_KEY>"
  
  # SMS/Notification
  TWILIO_AUTH_TOKEN: "<REPLACE_WITH_TOKEN>"
  SENDGRID_API_KEY: "<REPLACE_WITH_KEY>"

---
apiVersion: v1
kind: Secret
metadata:
  name: omniroute-temporal-secrets
  namespace: omniroute
type: Opaque
stringData:
  TEMPORAL_ADDRESS: "temporal:7233"
  TEMPORAL_NAMESPACE: "omniroute"

---
apiVersion: v1
kind: ConfigMap
metadata:
  name: omniroute-config
  namespace: omniroute
data:
  # Environment
  ENVIRONMENT: "production"
  LOG_LEVEL: "info"
  
  # Service Discovery
  AUTH_SERVICE_URL: "http://auth-service:8080"
  ORDER_SERVICE_URL: "http://order-service:8080"
  PAYMENT_SERVICE_URL: "http://payment-service:8080"
  INVENTORY_SERVICE_URL: "http://inventory-service:8080"
  CATALOG_SERVICE_URL: "http://catalog-service:8080"
  CUSTOMER_SERVICE_URL: "http://customer-service:8080"
  PRICING_ENGINE_URL: "http://pricing-engine:8080"
  GIG_PLATFORM_URL: "http://gig-platform:8080"
  ROUTE_OPTIMIZER_URL: "http://route-optimizer:8080"
  WMS_SERVICE_URL: "http://wms-service:8080"
  FLEET_SERVICE_URL: "http://fleet-service:8080"
  ANALYTICS_SERVICE_URL: "http://analytics-service:8080"
  MCP_SERVER_URL: "http://mcp-server:8080"
  AI_GATEWAY_URL: "http://ai-gateway:8140"
  
  # Hasura
  HASURA_GRAPHQL_ENDPOINT: "http://hasura:8080/v1/graphql"
  
  # Temporal
  TEMPORAL_UI_URL: "http://temporal-ui:8080"
  
  # n8n
  N8N_URL: "http://n8n:5678"
  
  # Redpanda
  KAFKA_BROKERS: "redpanda:9092"
